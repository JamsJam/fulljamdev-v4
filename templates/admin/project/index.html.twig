{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>EditedAt</th>
                <th>Title</th>
                <th>Description</th>
                <th>Technologies</th>
                <th>Images</th>
                <th>Projectlink</th>
                <th>IsOnline</th>
                <th>IsGitpublic</th>
                <th>Gitlink</th>
                <th>Casestudy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project.editedAt ? project.editedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.technologies ? project.technologies|json_encode : '' }}</td>
                <td>{{ project.images ? project.images|json_encode : '' }}</td>
                <td>{{ project.projectlink }}</td>
                <td>{{ project.isOnline ? 'Yes' : 'No' }}</td>
                <td>{{ project.isGitpublic ? 'Yes' : 'No' }}</td>
                <td>{{ project.gitlink }}</td>
                <td>{{ project.casestudy }}</td>
                <td>
                    <a href="{{ path('app_admin_project_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('app_admin_project_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_project_new') }}">Create new</a>
{% endblock %}
